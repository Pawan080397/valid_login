pipeline {
    agent any

    stages {

        stage('Setup Virtual Environment') {
            steps {
                bat '''
                python -m venv .venv
                call .venv\\Scripts\\activate
                pip install --upgrade pip
                pip install -r requirements.txt
                '''
            }
        }

        stage('Run Selenium Tests') {
            steps {
                bat '''
                call .venv\\Scripts\\activate
                python -m pytest -v
                '''
            }
        }
    }

    post {
        always {
            echo 'Build finished'
        }
        success {
            echo '✅ Selenium tests passed'
        }
        failure {
            echo '❌ Selenium tests failed'
        }
    }
}
